<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightorange"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.loginSignUp.MainLoginPage">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/wel"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/square_for_login">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join House"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/join_house_number_child"
                android:background="@drawable/square_for_login"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Enter House Number (1,2,3...)"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/join_house_password_child"
                android:background="@drawable/square_for_login"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Enter House Password"
                android:textSize="15dp"
                android:textColor="@color/black"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Join"
                android:id="@+id/join_house_button_child"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                app:cornerRadius = "20dp"
                app:backgroundTint="#D6AA55"
                />


        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>